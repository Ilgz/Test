<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.player2">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.software.leanback"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:banner="@drawable/ic_television__2_"
        android:icon="@mipmap/ic_ucon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_ucon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Player2"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".main_windows.PromotionActivity"
            android:parentActivityName=".main_windows.ProfileActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name=".main_windows.OtpActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".main_windows.RegisterActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".PokazFirst"
            android:parentActivityName=".ui.MediaActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".main_windows.ProfileActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".main_windows.TeleChannelActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main_windows.Logo_Activity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MediaActivity"
            android:screenOrientation="portrait">

        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".ui.MovieDetailActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName=".ui.MediaActivity" />
        <activity
            android:name=".ui.PokazSecond"
            android:parentActivityName=".ui.MediaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.PokazThird"
            android:parentActivityName=".ui.MediaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main_windows.Support"
            android:parentActivityName=".main_windows.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.TeleDetailActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            />
    </application>

</manifest>