<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_windows.PhoneNumber">

    <Button
        android:id="@+id/btnVerify"
        android:layout_width="254dp"
        android:layout_height="56dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/roundto"
        android:text="Подтвердить"
        android:textColor="@color/black"
        app:backgroundTint="#ffc20f"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVerify" />

    <Button
        android:id="@+id/sendOtp"
        android:layout_width="254dp"
        android:layout_height="56dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="325dp"
        android:background="@drawable/roundto"
        android:text="Отправить смс"
        android:textColor="@color/black"
        app:backgroundTint="#ffc20f"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/txtPhone"
        android:layout_width="254dp"
        android:layout_height="62dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="583dp"
        android:background="#212121"
        android:drawableLeft="@drawable/ic_baseline_local_phone_24"
        android:ems="10"
        android:hint="   Ваш номер телефона "
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#6d6d6d"
        android:textColorHint="#606060"
        android:textColorLink="#6d6d6d"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/txtVerify"
        android:layout_width="254dp"
        android:layout_height="62dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="65dp"
        android:background="#212121"
        android:drawableLeft="@drawable/ic_baseline_lock_open_24"
        android:ems="10"
        android:hint="   Код"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#6d6d6d"
        android:textColorHint="#606060"
        android:textColorLink="#6d6d6d"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPhone" />

</androidx.constraintlayout.widget.ConstraintLayout>